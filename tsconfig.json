{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": false,
    "lib": ["dom", "dom.iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@deps/*": ["./deps/*"],
      "@functions/router": ["./functions/src/router"]
    }
  },
  "include": [
    ".eslintrc.js",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
  ],
  "exclude": [
    "node_modules",
    "functions/node_modules",
  ],
}
