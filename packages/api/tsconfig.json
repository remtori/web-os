{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "lib": ["ES2022"],
    "module": "ESNext",
	"moduleResolution": "Bundler",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "include": [
    "src"
  ],
}
