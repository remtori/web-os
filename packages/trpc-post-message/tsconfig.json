{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"noEmit": true,
		"noUncheckedIndexedAccess": true,
		"checkJs": false,
		"lib": ["dom", "dom.iterable", "ES2022"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"incremental": true,
		"baseUrl": ".",
	},
	"include": ["src"]
}
