{
    "plugins": [
        "@trivago/prettier-plugin-sort-imports",
        "prettier-plugin-tailwindcss"
    ],
	"tailwindConfig": "./packages/desktop/tailwind.config.js",
    "singleQuote": true,
    "trailingComma": "all",
    "useTabs": true,
    "tabWidth": 4,
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
	  "^@/",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}
